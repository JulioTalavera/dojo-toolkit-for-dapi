extend layout
block main
    block welcomepage
        div#mainview(data-dojo-type="dojox/mobile/View", data-dojo-props="selected: true")
            h1#heading(data-dojo-type="dojox/mobile/Heading", data-dojo-props="label:\'The Dojo Toolkit API\'")
            div(data-dojo-type="dojox/mobile/RoundRect", data-dojo-props='shadow:true') 
                p Welcome to the DOJO API viewer, this API viewer is optimised for mobile devices. 
                p Please select the version you want to view which are listed below
            ul#versionlist(data-dojo-type="dojox/mobile/RoundRectList")
                - each version in config.versions
                    li(data-dojo-type="dojox/mobile/ListItem", data-dojo-props="label:'Version #{version}', rightIcon:'mblDomButtonBlueCircleArrow', moveTo:'#{version}' ")
                        
                        
            
        div#treesdataview(data-dojo-type="dojox/mobile/View")
            div#headversion(data-dojo-type="dojox/mobile/Heading", data-dojo-props="label:\'DOJO Version\', back:'Back', moveTo:'mainview'")
            div#treedatalist(data-dojo-type="dojox/mobile/RoundRectList")

        div#treesdataview1(data-dojo-type="dojox/mobile/View")
            div#headversion1(data-dojo-type="dojox/mobile/Heading", data-dojo-props="label:\'DOJO Version\', back:'Back', moveTo:'mainview'")
            div#treedatalist1(data-dojo-type="dojox/mobile/RoundRectList")
            div LEEE1

        div#treesdataview2(data-dojo-type="dojox/mobile/View")
            div#headversion2(data-dojo-type="dojox/mobile/Heading", data-dojo-props="label:\'DOJO Version\', back:'Back', moveTo:'mainview'")
            div#treedatalist2(data-dojo-type="dojox/mobile/RoundRectList")
            div LEEE2

        div#treesdataview3(data-dojo-type="dojox/mobile/View")
            div#headversion3(data-dojo-type="dojox/mobile/Heading", data-dojo-props="label:\'DOJO Version\', back:'Back', moveTo:'mainview'")
            div#treedatalist3(data-dojo-type="dojox/mobile/RoundRectList")
            div LEEE3
